apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: virtual-service-{{.MicroserviceName}}
spec:
  hosts:
  - {{.MicroserviceName}}.com
  gateways:
  - lyhsoft-gateway
  http:
  - match:
    - uri:
        prefix: /
    route:
    - destination:
        host: service-{{.MicroserviceName}}
        subset: {{.MicroserviceName}}-{{.MicroserviceVersion | replace "." "-"}}
        port:
          number: {{.ServicePort}}
      weight: 100