---
apiVersion: xl-deploy/v1
kind: Applications
spec:
- name: Applications/Applications
  type: core.Directory
- name: Applications/Applications/application-{{.ApplicationName}}-k8s
  type: core.Directory
- name: Applications/Applications/application-{{.ApplicationName}}-k8s/virtual-service-{{.MicroserviceName}}
  type: udm.Application
- name: Applications/Applications/application-{{.ApplicationName}}-k8s/virtual-service-{{.MicroserviceName}}/{{.MicroserviceVersion1}}+{{.MicroserviceVersion2}}
  type: udm.DeploymentPackage
  deployables:
  - name: virtual-service-{{.MicroserviceName}}-{{.MicroserviceVersion1}}+{{.MicroserviceVersion2}}
    type: k8s.ResourcesFile
    mergePatchType: strategic
    propagationPolicy: Foreground
    updateMethod: apply
    file: !file "resourcesFiles/virtual-service.yaml"
