apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: virtual-service-{{.MicroserviceName}}
spec:
  hosts:
  - {{.MicroserviceName}}.com
  gateways:
  - gateway-istio
  http:
  - match:
    - uri:
        prefix: /
    route:
    - destination:
        host: service-{{.MicroserviceName}}
        subset: {{.MicroserviceName}}-{{.MicroserviceVersion1 | replace "." "-"}}
        port:
          number: {{.ServicePort1}}
      weight: {{"{{"}}traffic-percentage-for-service-{{.MicroserviceVersion1}}{{"}}"}}
    - destination:
        host: service-{{.MicroserviceName}}
        subset: {{.MicroserviceName}}-{{.MicroserviceVersion2 | replace "." "-"}}
        port:
          number: {{.ServicePort2}}
      weight: {{"{{"}}traffic-percentage-for-service-{{.MicroserviceVersion2}}{{"}}"}}
